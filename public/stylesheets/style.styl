@import 'layout'

// ReResetting

h1, h2, h3, h4
  font-weight bold
h1
  font-size 1.5em
h2
  font-size 1.3em
h3
  font-size 1.2em
h4
  font-size 1.1em

// Styles

body
  font-family: Helvetica Neue, Lucida Grande, Arial, Sans-Serif
  font-size: 1.2em
  color: rgba(0, 0, 0, 0.8)

  > header h1
    font-family: 'Bowlby One SC', cursive
    font-size: 5em
    color: rgba(0, 0, 0, 0.7)
    
  > footer
    font-size: 0.5em
    color: rgba(0, 0, 0, 0.5)

.slogan
  font-style: italic